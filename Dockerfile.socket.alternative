# Alternative Dockerfile using different base image approach
FROM alpine:3.18

# Install Node.js manually to avoid Docker Hub issues
RUN apk add --no-cache nodejs npm python3 make g++

WORKDIR /app

# Copy package files
COPY socket-server-package.json package.json

# Install dependencies
RUN npm install --only=production

# Copy socket server and required scripts
COPY socket-server.js .
COPY scripts/ ./scripts/

# Create non-root user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S nextjs -u 1001
USER nextjs

# Expose port
EXPOSE 3004

# Start only the socket server
CMD ["node", "socket-server.js"]
