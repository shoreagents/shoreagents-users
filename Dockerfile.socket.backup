# Alternative Dockerfile with explicit registry and fallback
FROM registry.hub.docker.com/library/node:20-slim

WORKDIR /app

# Install dependencies for native modules
RUN apt-get update && apt-get install -y python3 make g++ && rm -rf /var/lib/apt/lists/*

# Copy package files
COPY socket-server-package.json package.json

# Install dependencies
RUN npm install --only=production

# Copy socket server and required scripts
COPY socket-server.js .
COPY scripts/ ./scripts/

# Create non-root user
RUN groupadd -r nodejs && useradd -r -g nodejs nextjs
USER nextjs

# Expose port
EXPOSE 3004

# Health check will be handled by Railway after deployment

# Start only the socket server
CMD ["node", "socket-server.js"]
