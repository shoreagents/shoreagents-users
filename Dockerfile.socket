FROM node:20-slim

WORKDIR /app

# Update package lists and install dependencies for native modules
RUN apt-get update && apt-get install -y \
    python3 \
    make \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Configure npm registry
RUN npm config set registry https://registry.npmjs.org/

# Copy package files
COPY socket-server-package.json package.json

# Install dependencies
RUN npm install --only=production

# Copy socket server and required scripts
COPY socket-server.js .
COPY scripts/ ./scripts/

# Create non-root user
RUN groupadd -g 1001 nodejs
RUN useradd -r -u 1001 -g nodejs nextjs
USER nextjs

# Expose port
EXPOSE 3004

# Health check will be handled by Railway after deployment

# Start only the socket server
CMD ["node", "socket-server.js"]
