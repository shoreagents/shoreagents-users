FROM node:20-alpine3.18

WORKDIR /app

# Configure npm registry
RUN npm config set registry https://registry.npmjs.org/

# Install dependencies for native modules
RUN apk add --no-cache python3 make g++

# Copy package files
COPY socket-server-package.json package.json

# Install dependencies
RUN npm install --only=production

# Copy socket server and required scripts
COPY socket-server.js .
COPY scripts/ ./scripts/

# Create non-root user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S nextjs -u 1001
USER nextjs

# Expose port
EXPOSE 3004

# Health check will be handled by Railway after deployment

# Start only the socket server
CMD ["node", "socket-server.js"]
