# Use a more reliable base image
FROM mcr.microsoft.com/azure-functions/node:4-node18

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && \
    apt-get install -y python3 make g++ && \
    rm -rf /var/lib/apt/lists/* && \
    apt-get clean

# Copy package files first for better caching
COPY socket-server-package.json package.json

# Install dependencies including PM2
RUN npm install --omit=dev && npm install -g pm2 && npm cache clean --force

# Copy application files
COPY socket-server.js .
COPY ecosystem.config.js .
COPY ecosystem.railway.config.js .
COPY scripts/ ./scripts/

# Create non-root user
RUN groupadd -g 1001 nodejs && \
    useradd -r -u 1001 -g nodejs nextjs && \
    chown -R nextjs:nodejs /app

# Create PM2 directories and set permissions
RUN mkdir -p /app/.pm2 && \
    chown -R nextjs:nodejs /app/.pm2 && \
    chmod -R 755 /app/.pm2

# Make startup script executable
RUN chmod +x /app/scripts/railway-start.sh

# Switch to non-root user
USER nextjs

# Set PM2 home directory
ENV PM2_HOME=/app/.pm2

# Expose port
EXPOSE 3004

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "console.log('Health check passed')" || exit 1

# Start the application with PM2 startup script
CMD ["/app/scripts/railway-start.sh"]
